<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="csrf-token" content="{{csrfToken}}" />
    <meta name="Content-Security-Policy" content="default-src 'self'; script-src-elem 'self' 'unsafe-inline' *; 
         script-src 'self' *;
         connect-src 'self' 'unsafe-inline' *;
         style-src 'self' pro.fontawesome.com;  
         style-src-elem 'self' *;
         font-src 'self' 'unsafe-inline' pro.fontawesome.com;
         img-src * ">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta3/css/bootstrap-select.min.css"
        integrity="sha512-g2SduJKxa4Lbn3GW+Q7rNz+pKP9AWMR++Ta8fgwsZRCUsawjPvF/BxSMkGS61VsR9yinGoEgrHPGPn2mrj8+4w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="shortcut icon" type="image/x-icon" href="./assets/portalAsset/images/Favicon.ico" />
    <link rel="stylesheet" href="./assets/portalAsset/css/datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="./assets/portalAsset/css/style.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>

<body>
<div class="container-fluid no-pad">
    <div class="overall-Div">
        {{>sideBar}}
        <div class="content-div">
            {{>adminHeader}}
            <div class="adminMain">
                <form id="AdminForm" method="post">
                    <div class="row frRowDiv">
                        <div class="col-3">
                            <div class="AdInDiv">
                                <label>Full Name</label>
                                <input type="text" autocomplete="off" class="caplet AdIn limitchar" placeholder="Enter full name" maxlength="40" id="fullName" />
                                <p class="ErrorMessage">Required</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="AdInDiv">
                                <label>Email Id</label>
                                <input type="email" autocomplete="off" placeholder="Enter your email" class="AdIn" id="eMail" />
                                <p class="ErrorMessage">Required</p>
                                <p class="emailError">Enter Valid mail ID</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="AdInDiv">
                                <label>Date of Joining</label>
                                <input readonly="true" autocomplete="off" type="text" class="AdIn datepicker" placeholder="Date of Joining" id="doj" />
                                <p class="ErrorMessage">Required</p>

                            </div>
                        </div>
                        <div class="col-3">
                            <div class="AdInDiv">
                                <label>Work Location</label>
                                <select class="selectpicker AdIn selectdropdown location" title="Select Work Location" id="location">
                                                     </select>
                                {{!-- <input type="text" class="AdIn" id="location" /> --}}
                                <p class="ErrorMessage">Required</p>
                            </div>
                        </div>
                    </div>
                    <div class="row frRowDiv">
                        <div class="col-3">
                            <div class="AdInDiv">
                                <label>Phone Number</label>
                                <input type="text" autocomplete="off" pattern="\d{1,5}" placeholder="Enter your phone number" maxlength="10" class="AdIn" id="phoneNumber" />
                                <p class="ErrorMessage">Required</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="AdInDiv">
                                <label>Department</label>
                                <select class="selectpicker AdIn selectdropdown department" title="Select Department" id="department">
                                                    </select>
                                {{!-- <input type="text" class="AdIn" id="department" /> --}}
                                <p class="ErrorMessage">Required</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="AdInDiv">
                                <label>Designation</label>
                                <select class="selectpicker selectdropdown AdIn designation" title="Select Designation" id="designation">
                                                    </select>
                                {{!-- <input type="text" class="AdIn" id="designation" /> --}}
                                <p class="ErrorMessage">Required</p>
                                <p class="deprErr">Create new Designation</p>
                            </div>
                        </div>
                    </div>
                    <input type="button" class="AdIn subBtn" value="Submit" id="saveDetails" />
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/plugins/jquery.min.js"></script>
<script src="/assets/js/plugins/bootstrap.bundle.min.js"></script>
<script src="/assets/js/plugins/bootstrap.select.min.js"></script>
<script src="js/addDetails.js"></script>
<script src="./assets/portalAsset/js/datepicker.min.js"></script>
<script src="./assets/portalAsset/js/jquery.inputmask.bundle.min.js"></script>
<script src="js/common.js"></script>
<script src="/js/customToast.js" type="text/javascript"></script>
<script src="/assets/js/plugins/bootstrap-notify.min.js"></script>
</body>
</html>